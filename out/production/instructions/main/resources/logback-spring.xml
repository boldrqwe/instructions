<configuration>
    <springProperty scope="context" name="appName" source="spring.application.name" defaultValue="instructions-backend"/>
    <springProperty scope="context" name="logFormat" source="logging.format" defaultValue="text"/>

    <property name="TEXT_PATTERN" value="%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} [%thread] %-5level %logger{36} - %msg%n"/>

    <appender name="TEXT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${TEXT_PATTERN}</pattern>
        </encoder>
    </appender>

    <appender name="JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp>
                    <fieldName>timestamp</fieldName>
                </timestamp>
                <pattern>
                    <pattern>
                        {
                        "level": "%level",
                        "logger": "%logger{36}",
                        "thread": "%thread",
                        "message": "%message",
                        "application": "${appName}"
                        }
                    </pattern>
                </pattern>
            </providers>
        </encoder>
    </appender>

    <if condition='property("logFormat").equalsIgnoreCase("json")'>
        <then>
            <root level="INFO">
                <appender-ref ref="JSON"/>
            </root>
        </then>
        <else>
            <root level="INFO">
                <appender-ref ref="TEXT"/>
            </root>
        </else>
    </if>
</configuration>
